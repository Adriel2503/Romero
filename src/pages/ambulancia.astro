<style>
  .directory-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 2rem 1rem;
  }

  .directory-header {
    text-align: center;
    margin-bottom: 3rem;
  }

  .directory-header h1 {
    color: #1e293b;
    font-size: 2.5rem;
    margin-bottom: 1rem;
  }

  .directory-header p {
    color: #64748b;
    font-size: 1.2rem;
    margin-bottom: 2rem;
  }

  .back-btn {
    display: inline-block;
    background: #3b82f6;
    color: white;
    padding: 0.75rem 1.5rem;
    text-decoration: none;
    border-radius: 0.5rem;
    font-weight: 500;
    transition: background 0.3s;
  }

  .back-btn:hover {
    background: #2563eb;
  }

  .emergency-numbers {
    background: linear-gradient(135deg, #fee2e2, #fef3c7);
    border: 2px solid #f87171;
    border-radius: 1rem;
    padding: 2rem;
    margin-bottom: 3rem;
  }

  .emergency-numbers h2 {
    color: #dc2626;
    text-align: center;
    margin-bottom: 1.5rem;
    font-size: 1.8rem;
  }

  .emergency-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 1.5rem;
  }

  .emergency-card {
    background: white;
    border-radius: 1rem;
    padding: 1.5rem;
    text-align: center;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    border: 2px solid #e5e7eb;
  }

  .emergency-card.urgent {
    border-color: #dc2626;
    background: linear-gradient(135deg, #fee2e2, #fef3c7);
  }

  .emergency-icon {
    font-size: 3rem;
    margin-bottom: 1rem;
  }

  .emergency-info h3 {
    color: #1e293b;
    margin-bottom: 0.5rem;
    font-size: 1.2rem;
  }

  .emergency-number {
    font-size: 2rem;
    font-weight: bold;
    color: #dc2626;
    margin-bottom: 1rem;
  }

  .hospitals-section, .private-hospitals {
    margin-bottom: 3rem;
  }

  .hospitals-section h2, .private-hospitals h2 {
    color: #1e293b;
    font-size: 1.8rem;
    margin-bottom: 1.5rem;
    text-align: center;
  }

  .hospitals-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
    gap: 1.5rem;
  }

  .hospital-card {
    background: white;
    border-radius: 1rem;
    padding: 1.5rem;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    border: 2px solid #e5e7eb;
    transition: transform 0.3s, box-shadow 0.3s;
  }

  .hospital-card:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 15px rgba(0, 0, 0, 0.15);
  }

  .hospital-card.private {
    border-color: #10b981;
    background: linear-gradient(135deg, #f0fdf4, #ecfdf5);
  }

  .hospital-card h3 {
    color: #1e293b;
    font-size: 1.2rem;
    margin-bottom: 0.75rem;
    font-weight: 600;
  }

  .hospital-address {
    color: #64748b;
    font-size: 0.95rem;
    margin-bottom: 0.5rem;
  }

  .hospital-phone {
    color: #3b82f6;
    font-weight: 600;
    margin-bottom: 0.5rem;
  }

  .hospital-specialty {
    color: #6b7280;
    font-size: 0.9rem;
    margin-bottom: 1rem;
    font-style: italic;
  }

  .call-btn {
    width: 100%;
    background: #dc2626;
    color: white;
    border: none;
    padding: 0.75rem;
    border-radius: 0.5rem;
    font-weight: 600;
    cursor: pointer;
    transition: background 0.3s;
  }

  .call-btn:hover {
    background: #b91c1c;
  }

  .private .call-btn {
    background: #10b981;
  }

  .private .call-btn:hover {
    background: #059669;
  }

  @media (max-width: 768px) {
    .directory-header h1 {
      font-size: 2rem;
    }
    
    .hospitals-grid {
      grid-template-columns: 1fr;
    }
    
    .emergency-grid {
      grid-template-columns: 1fr;
    }
  }
</style> 