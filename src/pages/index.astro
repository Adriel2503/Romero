---
import Layout from '../layouts/Layout.astro';
import Tabs from '../components/Tabs.astro';
---

<Layout title="Centro Médico - Información de Salud">
	<main>
		<div class="hero">
			<h1>Centro de Control</h1>
		</div>

		<Tabs />
	</main>
</Layout>

<style>
	main {
		width: 100%;
	}

	.hero {
		background: linear-gradient(to right, #1e3a8a, #3b82f6);
		color: white;
		padding: 2rem 1.5rem;  /* Reducido de 4rem a 2rem */
		text-align: center;
		margin-bottom: 1rem;   /* Reducido de 2rem a 1rem */
	}

	h1 {
		font-size: 2rem;       /* Reducido de 2.5rem a 2rem */
		font-weight: 700;
		margin-bottom: 0.5rem; /* Reducido de 1rem a 0.5rem */
	}

	p {
		font-size: 1.1rem;     /* Reducido de 1.2rem a 1.1rem */
		opacity: 0.9;
	}
</style>
