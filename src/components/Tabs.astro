---
import DiabetesCharts from './DiabetesCharts.astro';
import HipertensionCharts from './HipertensionCharts.astro';

const tabs = [
  { id: 'hipertension', label: 'Hipertensión Arterial', active: true },
  { id: 'diabetes', label: 'Diabetes', active: false },
  { id: 'renal', label: 'Insuficiencia Renal', active: false },
];
---

<div class="tabs-container">
  <div class="tabs">
    {tabs.map((tab) => (
      <button
        class={`tab-button ${tab.active ? 'active' : ''}`}
        data-tab={tab.id}
      >
        {tab.label}
      </button>
    ))}
  </div>

  <div class="tab-content">
    <div class="tab-pane active" id="hipertension">
      <h2>Monitoreo de Hipertensión Arterial</h2>
      <p>Visualización de los datos de monitoreo cardíaco.</p>
      <HipertensionCharts />
    </div>
    <div class="tab-pane" id="diabetes">
      <h2>Monitoreo de Diabetes</h2>
      <p>Visualización de los últimos 1000 registros de glucosa y frecuencia cardíaca.</p>
      <DiabetesCharts />
    </div>
    <div class="tab-pane" id="renal">
      <h2>Insuficiencia Renal</h2>
      <p>Información sobre la insuficiencia renal y sus cuidados.</p>
    </div>
  </div>
</div>

<style>
  .tabs-container {
    max-width: 1200px;
    margin: 2rem auto;
    padding: 0 1rem;
  }

  .tabs {
    display: flex;
    gap: 1rem;
    border-bottom: 2px solid #e2e8f0;
    margin-bottom: 2rem;
  }

  .tab-button {
    padding: 0.75rem 1.5rem;
    border: none;
    background: none;
    color: #64748b;
    cursor: pointer;
    font-size: 1.1rem;
    position: relative;
    transition: color 0.3s;
  }

  .tab-button:hover {
    color: #0f172a;
  }

  .tab-button.active {
    color: #0f172a;
    font-weight: 600;
  }

  .tab-button.active::after {
    content: '';
    position: absolute;
    bottom: -2px;
    left: 0;
    right: 0;
    height: 2px;
    background-color: #3b82f6;
  }

  .tab-content {
    padding: 1rem;
  }

  .tab-pane {
    display: none;
  }

  .tab-pane.active {
    display: block;
  }

  h2 {
    color: #1e293b;
    font-size: 1.8rem;
    margin-bottom: 1rem;
  }

  p {
    color: #475569;
    line-height: 1.6;
    margin-bottom: 1.5rem;
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const tabButtons = document.querySelectorAll('.tab-button');
    const tabPanes = document.querySelectorAll('.tab-pane');

    tabButtons.forEach(button => {
      button.addEventListener('click', () => {
        // Remove active class from all buttons and panes
        tabButtons.forEach(btn => btn.classList.remove('active'));
        tabPanes.forEach(pane => pane.classList.remove('active'));

        // Add active class to clicked button and corresponding pane
        button.classList.add('active');
        const tabId = button.getAttribute('data-tab');
        document.getElementById(tabId)?.classList.add('active');
      });
    });
  });
</script> 